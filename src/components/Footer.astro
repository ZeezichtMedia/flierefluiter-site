---
const currentYear = new Date().getFullYear();

const { pathname } = Astro.url;
const lang = pathname.startsWith('/en') ? 'en' : pathname.startsWith('/de') ? 'de' : 'nl';

const translations = {
  nl: {
    description: 'Rustiek genieten in de Brabantse Kempen. Een plek voor natuurliefhebbers en rustzoekers.',
    quickLinks: 'Snel naar',
    home: 'Home',
    accommodatie: 'Accommodatie',
    omgeving: 'Omgeving',
    galerij: 'Galerij',
    contact: 'Contact',
    rights: 'Alle rechten voorbehouden.',
    websiteBy: 'Website door:'
  },
  en: {
    description: 'Rustic enjoyment in the Brabant Kempen. A place for nature lovers and peace seekers.',
    quickLinks: 'Quick Links',
    home: 'Home',
    accommodatie: 'Accommodation',
    omgeving: 'Surroundings',
    galerij: 'Gallery',
    contact: 'Contact',
    rights: 'All rights reserved.',
    websiteBy: 'Website by:'
  },
  de: {
    description: 'Rustikaler Genuss in den Brabanter Kempen. Ein Ort fÃ¼r Naturliebhaber und Ruhesuchende.',
    quickLinks: 'Schnell zu',
    home: 'Home',
    accommodatie: 'Unterkunft',
    omgeving: 'Umgebung',
    galerij: 'Galerie',
    contact: 'Kontakt',
    rights: 'Alle Rechte vorbehalten.',
    websiteBy: 'Website von:'
  }
};

const t = translations[lang];

const getLink = (path: string) => {
  if (lang === 'nl') return path;
  return `/${lang}${path}`;
};
---

<footer class="bg-primary text-white py-12 mt-12">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
    <div>
      <h3 class="text-xl font-serif font-bold mb-4">B&B De Flierefluiter</h3>
      <p class="text-secondary opacity-90">
        {t.description}
      </p>
    </div>
    
    <div>
      <h3 class="text-xl font-serif font-bold mb-4">Contact</h3>
      <ul class="space-y-2 text-secondary opacity-90">
        <li>Bucht 69</li>
        <li>5571 CV Bergeijk</li>
        <li>{lang === 'en' ? 'The Netherlands' : lang === 'de' ? 'Niederlande' : 'Noord-Brabant'}</li>
        <li class="mt-4">
            <a href="mailto:info@deflierefluiter.nl" class="hover:text-white underline">info@deflierefluiter.nl</a>
        </li>
      </ul>
    </div>

    <div>
      <h3 class="text-xl font-serif font-bold mb-4">{t.quickLinks}</h3>
      <ul class="space-y-2">
        <li><a href={getLink('/accommodatie')} class="text-secondary hover:text-white transition-colors">{t.accommodatie}</a></li>
        <li><a href={getLink('/omgeving')} class="text-secondary hover:text-white transition-colors">{t.omgeving}</a></li>
        <li><a href={getLink('/galerij')} class="text-secondary hover:text-white transition-colors">{t.galerij}</a></li>
        <li><a href={getLink('/contact')} class="text-secondary hover:text-white transition-colors">{t.contact}</a></li>
      </ul>
    </div>
  </div>
  <div class="container mx-auto px-4 mt-8 pt-8 border-t border-white/20 text-center text-sm text-secondary opacity-75">
    &copy; {currentYear} B&B De Flierefluiter. {t.rights} | {t.websiteBy} <a href="https://zee-zicht.nl" target="_blank" rel="noopener noreferrer" class="hover:text-white underline">Zeezicht</a>
  </div>
</footer>
