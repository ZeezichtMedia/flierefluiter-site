---
interface Feature {
  title: string;
  description: string;
  icon?: any;
}

interface Props {
  title: string;
  features: Feature[];
}

const { title, features } = Astro.props;
---

<section class="py-16 md:py-24 bg-background">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-serif font-bold text-center text-primary mb-16">
      {title}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
      {features.map(feature => (
        <div class="flex flex-col items-center text-center p-6 rounded-lg hover:bg-white hover:shadow-md transition-all duration-300">
          {feature.icon && (
            <div class="mb-4 text-accent">
               <feature.icon class="w-10 h-10" />
            </div>
          )}
          <h3 class="text-xl font-serif font-bold mb-3 text-text">
            {feature.title}
          </h3>
          <p class="text-text/80 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
