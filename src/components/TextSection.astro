---
interface Props {
  title?: string;
  imagePath?: string;
  imageAlt?: string;
  reversed?: boolean;
  className?: string;
}

const { title, imagePath, imageAlt = "", reversed = false, className = "" } = Astro.props;
---

<section class={`py-16 md:py-24 ${className}`}>
  <div class="container mx-auto px-4">
    <div class={`flex flex-col ${reversed ? 'lg:flex-row-reverse' : 'lg:flex-row'} items-center gap-12 lg:gap-20`}>
      
      <!-- Text Content -->
      <div class="flex-1">
        {title && (
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-primary mb-6">
            {title}
          </h2>
        )}
        <div class="prose prose-lg text-text/80">
          <slot />
        </div>
      </div>

      <!-- Image -->
      {imagePath && (
        <div class="flex-1 w-full">
          <div class="relative rounded-lg overflow-hidden shadow-xl aspect-[4/3]">
            <img 
              src={imagePath} 
              alt={imageAlt} 
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
            />
          </div>
        </div>
      )}
      
    </div>
  </div>
</section>
