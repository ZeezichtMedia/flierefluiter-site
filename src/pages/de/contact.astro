---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { MapPin, Mail, Car } from 'lucide-astro';
import contactImage from '../../assets/images/839aadcc-1a1d-4d38-958d-93ee08972ce5_mw1280.jpeg';
---

<Layout title="Kontakt - B&B De Flierefluiter" lang="de">
  <div class="bg-primary py-12 text-white text-center">
    <h1 class="text-4xl md:text-5xl font-serif font-bold">Kontakt</h1>
  </div>

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        
        <!-- Contact Info -->
        <div class="flex-1">
          <h2 class="text-3xl font-serif font-bold text-primary mb-8">Kontakt aufnehmen</h2>
          <p class="text-lg mb-8 text-text/80">
            Haben Sie Fragen oder möchten Sie reservieren? Nehmen Sie gerne Kontakt mit uns auf. Wir helfen Ihnen gerne weiter.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <MapPin class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">Adresse</h3>
                <p>Bucht 69<br>5571 CV Bergeijk<br>Niederlande</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <Mail class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">E-Mail</h3>
                <a href="mailto:info@deflierefluiter.nl" class="text-primary hover:underline">info@deflierefluiter.nl</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <Car class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">Erreichbarkeit</h3>
                <p>Bus: 700 Meter von der Haltestelle<br>Zug: 22 km vom Bahnhof<br>Kostenloses Parken auf dem Gelände</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="flex-1">
          <div class="rounded-lg overflow-hidden shadow-xl aspect-[4/3]">
             <Image 
              src={contactImage} 
              alt="Kontakt B&B De Flierefluiter" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Google Maps -->
  <section class="w-full h-[400px] md:h-[500px]">
    <iframe 
      src="https://maps.google.com/maps?q=Bucht+69,5571CV+Bergeijk,Nederland&hl=de&z=15&output=embed" 
      width="100%" 
      height="100%" 
      style="border:0;" 
      allowfullscreen="" 
      loading="lazy" 
      referrerpolicy="no-referrer-when-downgrade">
    </iframe>
  </section>
</Layout>
