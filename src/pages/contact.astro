---
import Layout from '../layouts/Layout.astro';
import { MapPin, Mail, Car } from 'lucide-astro';

const contactImage = '/images/839aadcc-1a1d-4d38-958d-93ee08972ce5_mw1280.jpeg';
---

<Layout title="Contact - B&B De Flierefluiter">
  <div class="bg-primary py-12 text-white text-center">
    <h1 class="text-4xl md:text-5xl font-serif font-bold">Contact</h1>
  </div>

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        
        <!-- Contact Info -->
        <div class="flex-1">
          <h2 class="text-3xl font-serif font-bold text-primary mb-8">Neem contact op</h2>
          <p class="text-lg mb-8 text-text/80">
            Heeft u vragen of wilt u reserveren? Neem gerust contact met ons op. Wij staan u graag te woord.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <MapPin class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">Adres</h3>
                <p>Bucht 69<br>5571 CV Bergeijk<br>Noord-Brabant</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <Mail class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">E-mail</h3>
                <a href="mailto:info@deflierefluiter.nl" class="text-primary hover:underline">info@deflierefluiter.nl</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="text-primary mt-1">
                <Car class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-bold text-primary">Bereikbaarheid</h3>
                <p>Bus: 700 meter van de halte<br>Trein: 22 km van het station<br>Gratis parkeren op eigen terrein</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="flex-1">
          <div class="rounded-lg overflow-hidden shadow-xl aspect-[4/3]">
             <img 
              src={contactImage} 
              alt="Contact B&B De Flierefluiter" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>
